<Window x:Class="StudyChinese._9plus.Net.LearnCards.CardsMemoryGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyChinese._9plus.Net.LearnCards"
        mc:Ignorable="d"
        Title="Карточки"
        Height="600"
        Width="900"
        Background="#FFF5F5"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowState="Maximized">

    <Window.Resources>

        <!-- Тень карточек -->
        <DropShadowEffect x:Key="CardShadow"
                          Color="#000000"
                          Direction="315"
                          ShadowDepth="2"
                          Opacity="0.1"
                          BlurRadius="10"/>

        <!-- Универсальная кнопка -->
        <Style x:Key="CardButton" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFA2A2"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Red"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#B22222"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">

            <!-- Верхние счётчики -->
            <Border Background="White"
                    CornerRadius="10"
                    Padding="20"
                    Width="800"
                    Margin="0,0,0,30"
                    Effect="{StaticResource CardShadow}"
                    BorderBrush="#FFA2A2"
                    BorderThickness="2">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="LearnedNumberOfCards"
                               Grid.Column="0"
                               Text="Выучено: 12"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="Green"
                               HorizontalAlignment="Center"/>

                    <TextBlock x:Name="StillLaerningNumberOfCards"
                               Grid.Column="1"
                               Text="В процессе: 8"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#FF8C00"
                               HorizontalAlignment="Center"/>

                    <TextBlock x:Name="NotStartedNumberOfCards"
                               Grid.Column="2"
                               Text="Не начато: 20"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="Red"
                               HorizontalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Карточка слова -->
            <Border Background="White"
                    CornerRadius="12"
                    Padding="40"
                    Width="800"
                    Effect="{StaticResource CardShadow}"
                    BorderBrush="#FFA2A2"
                    BorderThickness="2">

                <StackPanel DataContext="{Binding choosenCard}">

                        <!-- Русское слово -->
                        <TextBlock Text="{Binding RusTranslation}"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="#333333"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                        <!-- Китайское слово -->
                        <TextBlock x:Name="CheneseWord"
                               Text="{Binding ChnTranslation}"
                               FontSize="36"
                               FontWeight="SemiBold"
                               Foreground="Red"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,40"
                               Visibility="Hidden"/>

                        <!-- Кнопка показать ответ -->
                        <Button x:Name="ShowAnswerButton"
                            Content="Показать ответ"
                            Width="250"
                            Style="{StaticResource CardButton}"
                            Click="ShowAnswerButton_Click"/>

                        <!-- Кнопки оценки (скрыты по умолчанию) -->
                    <StackPanel x:Name="AnswerButtonsPanel"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,20,0,0"
                                Visibility="Collapsed">

                        <Button Content="Знаю (1д)"
                                Width="180"
                                Margin="10,0"
                                Style="{StaticResource CardButton}"
                                Click="OneDayPlus_Button"/>

                        <Button Content="Надо учить (7 мин)"
                                Width="220"
                                Margin="10,0"
                                Style="{StaticResource CardButton}"
                                Click ="SevenMimutesPlus_Button"/>

                        <Button Content="Совсем не знаю (2 мин)"
                                Width="250"
                                Margin="10,0"
                                Style="{StaticResource CardButton}"
                                Click="TwoMinutesPlus_Button"/>
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</Window>
