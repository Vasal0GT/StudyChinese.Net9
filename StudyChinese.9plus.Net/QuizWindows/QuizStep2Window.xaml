<Window x:Class="StudyChinese._9plus.Net.QuizWindows.QuizStep2Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создание викторины — Шаг 2"
        Height="600" Width="1000"
        Background="#FFF5F5"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowState="Maximized"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType">

    <Window.Resources>
        <Style TargetType="ScrollBar" x:Key="CustomScrollBar">
            <Setter Property="Width" Value="10"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Border x:Name="TrackBackground" Background="#FFF0F0F0" CornerRadius="4"/>
                            <Track Name="PART_Track" IsDirectionReversed="True">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineUpCommand" Visibility="Collapsed"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Background="#FFDD7777"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineDownCommand" Visibility="Collapsed"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ScrollViewer" x:Key="CustomScrollViewer">
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <ScrollContentPresenter Grid.Column="0" Grid.Row="0" />
                            <ScrollBar Grid.Column="1" Grid.Row="0"
                               Style="{StaticResource CustomScrollBar}"
                               Orientation="Vertical"
                               Value="{TemplateBinding VerticalOffset}"
                               Maximum="{TemplateBinding ScrollableHeight}"
                               ViewportSize="{TemplateBinding ViewportHeight}"
                               Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PinkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FFD7D7"/>
            <Setter Property="BorderBrush" Value="#FFA2A2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="6"
                        Padding="5"
                        Effect="{StaticResource CardShadow}">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost"
                                      VerticalScrollBarVisibility="Hidden"
                                      HorizontalScrollBarVisibility="Disabled"/>
                                <TextBlock x:Name="Watermark"
                                   Text="{TemplateBinding Tag}"
                                   Foreground="#888"
                                   Margin="10,0,0,0"
                                   IsHitTestVisible="False"
                                   VerticalAlignment="Center"
                                   Visibility="Hidden"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Эффект тени -->
        <DropShadowEffect x:Key="CardShadow" 
                          Color="#000000" 
                          Direction="315" 
                          ShadowDepth="2" 
                          Opacity="0.1" 
                          BlurRadius="10"/>

        <!-- Кнопка назад -->
        <Style x:Key="BackButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Карточки тем -->
        <Style x:Key="ThemeCard" TargetType="Border">
            <!-- Базовые свойства -->
            <Setter Property="Background" Value="#FFFFE5E5"/>
            <!-- более светлый -->
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>

            <!-- Эффекты при наведении -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFFFD2D2"/>
                    <!-- немного темнее -->
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Большая белая карточка с тенью -->
        <Style x:Key="BigCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>

        <!-- Красная кнопка -->
        <Style x:Key="RedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Red"/>
            <Setter Property="BorderBrush" Value="Red"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4C4C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#B22222"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="40,20">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Width="900">

            <!-- Шапка -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                <Button x:Name="BackButton" Style="{StaticResource BackButton}" Content="←" Click="BackButton_Click"/>
                <TextBlock Text="Создание викторины"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#333333"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           x:Name="QuizName"/>
            </StackPanel>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Левый блок с темами -->
                <Border Style="{StaticResource BigCard}" Grid.Column="0">
                    <StackPanel x:Name="stackPanelWithThemes">
                        <TextBlock Text="Темы" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,10"/>

                        <!-- Тема как TextBox -->
                        <Border Style="{StaticResource ThemeCard}" >
                            <StackPanel>
                                <TextBox Text="Theme 1" 
                                         FontWeight="SemiBold" 
                                         Foreground="#333333" 
                                         BorderThickness="0"
                                         Background="Transparent"/>
                                <TextBlock Text="0 вопросов" FontSize="12" Foreground="#666666"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Правый блок с вопросами -->
                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                    <Border Style="{StaticResource BigCard}">
                        <StackPanel>

                            <!-- Заголовок блока прямо в border -->
                            <TextBlock x:Name="themeNameInQuestions"
                                       Text=""
                                       FontWeight="SemiBold"
                                       FontSize="18"
                                       Foreground="#333333"
                                       Margin="0,0,0,15"/>

                            <ScrollViewer x:Name="questionScrollViewer"
                                    Style="{StaticResource CustomScrollViewer}"
                                    Height="400"
                                    Margin="0,0,0,0">
                                <StackPanel x:Name="questionPanel"
                                    Orientation="Vertical"
                                    HorizontalAlignment="Stretch"
                                    Width="Auto"/>
                            </ScrollViewer>

                            <TextBlock x:Name="warringTextNoQuestions"
                                       Text="В этой теме пока нет вопросов. Добавьте первый вопрос!" 
                                       Foreground="Red" 
                                       TextWrapping="Wrap"
                                       Margin="0,10,0,0"/>
                            <Button HorizontalAlignment="Right" Style="{StaticResource RedButton}" Content="+ Добавить вопрос" Click="Button_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Кнопка сохранить под блоком -->
                    <Button Style="{StaticResource RedButton}" 
                            Content="Сохранить викторину" 
                            HorizontalAlignment="Right" 
                            Margin="0,15,0,0"
                            x:Name="SaveButton"
                            Click="SaveButton_Click"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
